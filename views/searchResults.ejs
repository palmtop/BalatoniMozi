<!DOCTYPE html>
<html>
<head>
    <title>Movie Search Results</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Movie Search Results</h1>
    <% if (movies && movies.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Year</th>
                    <th>Select</th>
                </tr>
            </thead>
            <tbody>
                <% movies.forEach(function(movie) { %>
                    <tr>
                        <td><%= movie.title %></td>
                        <td><%= movie.genreStr %></td>
                        <td><%= movie.release_date.substring(0,4) %></td>
                        <td><button onclick="selectMovie('<%= movie.id %>')">Select</button></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No movies found.</p>
    <% } %>
    <script src="/searchResultsScript.js"></script>
</body>
</html>